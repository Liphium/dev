---
import favicon from "../assets/favicon.png";
let links: {
	name: string;
	link: string;
}[] = [
	{
		name: "Planet API",
		link: "/planet-api",
	},
	{
		name: "Hydro",
		link: "/hydro",
	},
	{
		name: "Neogate",
		link: "/neogate",
	},
	{
		name: "Magic",
		link: "/magic",
	},
];
---

<div class="flex flex-row justify-center p-4">
	<div class="flex gap-8 text-bg-100 font-mono">
		<div class="flex align-center gap-2">
			<img src={favicon.src} class="w-6 h-6 rounded-sm" />
			<a
				class="border-b-2 border-transparent font-bold hover:border-b-2 hover:border-bg-100"
				href="/">Liphium Tools</a
			>
		</div>
		{
			links.map((link) => (
				<a
					class="border-b-2 border-transparent hover:border-b-2 hover:border-bg-100"
					href={link.link}
				>
					{link.name}
				</a>
			))
		}
	</div>
</div>
